<%- include('partials/header') -%>
<div class="container">
  <div class="row justify-content-center mt-5">
    <div class="col-6">
      <h2><%= post.commonName %></h2>
      <h4 class="font-italic">(<%= post.sciName %>)</h4>
      <img class="img-fluid border border-success" src="<%= post.image%>" />
      <!-- <div class="row justify-content-between">
        <form
          class="col-1"
          action="/post/likePost/<%= post.id %>?_method=PUT"
          method="POST"
        >
          <button class="btn btn-success fa fa-heart" type="submit"></button>
        </form>
        <h3 class="col-3">Likes: <%= post.likes %></h3>
      </div> -->
    </div>
    <div class="col-3 mt-5">
      <h5>Description</h5>
      <p><%= post.description %></p>
      <h5>Region</h5>
      <p><%= post.origin %></p>
      <h5>Fruit Type</h5>
      <p><%= post.type %></p>
      <h5>Taste</h5>
      <p><%= post.taste %></p>
    </div>
    <div class="col-6 mt-5 btn-group" role="group">
      <a class="btn btn-success border border-dark rounded" href="/profile">Return to Profile</a>
      <a class="btn btn-success border border-dark rounded" href="/feed">Return to All Fruits</a>
      <%if(post.user == user.id){ %>
        <form
            action="/post/deletePost/<%= post.id %>?_method=DELETE"
            method="POST"
            class="col-3 btn btn-success border border-dark rounded"
          >
            <button class="btn btn-success fa fa-trash" type="submit"></button>
        </form>
      <%}%>
    </div>
  </div>
</div>

<%- include('partials/footer') -%>
